// two buttons (or links) for users to choose between Parent or Educator
<form action="/register" method="POST" enctype="multipart/form-data">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br>

    <label for="role">Select Role:</label><br>
    <button type="submit" name="role" value="parent">Parent</button>
    <button type="submit" name="role" value="educator">Educator</button><br>

    <label for="profile_photo">Profile Photo:</label>
    <input type="file" name="profile_photo" id="profile_photo"><br>

    <button type="submit">Register</button>
</form>
