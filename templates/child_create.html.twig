{% extends "master.html.twig" %}

{% block addHead %}
<link rel="stylesheet" href="/public/custom.css">
{% endblock %}

{% block content %}
<div class="content-box custom-form">
    <h2>Add a New Child</h2>
    <form method="post" action="/child/new" enctype="multipart/form-data">
        <label for="name">Child's Name:</label>
        <input type="text" name="name" id="name" required>

        <label for="date_of_birth">Date of Birth:</label>
        <input type="date" name="date_of_birth" id="date_of_birth" required>

        <label for="profile_photo">Child's Photo (optional):</label>
        <input type="file" name="profile_photo" id="profile_photo" accept="image/*">

        <button type="submit">Create Child</button>
    </form>
</div>
{% endblock %}
