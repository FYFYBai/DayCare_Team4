{% extends "dashboard.html.twig" %}

{% block title %}Payment - Daycare System{% endblock %}

{% block head %}
{{ parent() }}
<style>
/* Custom CSS to replace Bootstrap classes */
/* Layout */
.payment-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 15px;
}

/* Card styling */
.payment-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    background-color: white;
}

.payment-card-header {
    border-bottom: 1px solid #ddd;
    padding: 1rem;
    background-color: #f8f9fa;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.payment-card-body {
    padding: 1.5rem;
}

/* Text utilities */
.text-center {
    text-align: center;
}

.text-end {
    text-align: right;
}

.text-muted {
    color: #6c757d;
}

.small {
    font-size: 85%;
}

/* Margins */
.mb-4 {
    margin-bottom: 1.5rem;
}

.ms-2 {
    margin-left: 0.5rem;
}

.me-2 {
    margin-right: 0.5rem;
}

/* Flexbox */
.flex-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Table styles */
.payment-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
}

.payment-table td, .payment-table th {
    padding: 0.75rem;
    border-top: 1px solid #dee2e6;
}

.payment-table-primary {
    background-color: #cfe2ff;
}

/* Form elements */
.child-input-group {
    display: flex;
    width: 120px;
}

.child-input {
    width: 100%;
    text-align: center;
    border: 1px solid #ced4da;
    padding: 0.25rem;
    font-size: 0.875rem;
}

.child-button {
    background-color: #f8f9fa;
    border: 1px solid #ced4da;
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    cursor: pointer;
}

.child-button:hover {
    background-color: #e9ecef;
}

.checkout-button {
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-size: 1.1rem;
    background-color: #0d6efd;
    color: white;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
}

.checkout-button:hover {
    background-color: #0b5ed7;
}

/* Modal styles */
.modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    display: none;
    z-index: 1000;
}

.modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: white;
    border-radius: 8px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    z-index: 1001;
    display: none;
}

.modal-header {
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #dee2e6;
}

.modal-header-error {
    background-color: #dc3545;
    color: white;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.modal-header-warning {
    background-color: #ffc107;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.modal-body {
    padding: 1rem;
}

.modal-footer {
    padding: 1rem;
    border-top: 1px solid #dee2e6;
    text-align: right;
}

.modal-close-button {
    background: transparent;
    border: none;
    font-size: 1.5rem;
    line-height: 1;
    cursor: pointer;
}

.modal-action-button {
    padding: 0.375rem 0.75rem;
    background-color: #6c757d;
    color: white;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
}

.show {
    display: block;
}
</style>
{% endblock %}

{% block content %}
<div class="payment-container">
    <div class="payment-card">
        <div class="payment-card-header">
            <h1 class="text-center">Registration Payment</h1>
        </div>
        <div class="payment-card-body">
            <div class="mb-4">
                <h4 class="text-center mb-4">Daycare Registration Fees</h4>
                
                <!-- Simplified Price Breakdown Table -->
                <table class="payment-table" id="priceTable">
                    <tr>
                        <td>
                            <div class="flex-container">
                                <div>
                                    <strong>Registration Fee Per Child:</strong>
                                    <span class="ms-2">${{ paymentDetails.baseRegistrationFee|number_format(2) }}</span>
                                </div>
                                <div class="child-input-group">
                                    <button type="button" class="child-button" id="decreaseChildren">-</button>
                                    <input type="number" class="child-input" id="childCount" value="{{ paymentDetails.childrenCount }}" min="1" max="10">
                                    <button type="button" class="child-button" id="increaseChildren">+</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr class="payment-table-primary">
                        <th>Total Amount</th>
                        <th class="text-end" id="totalAmount">${{ (paymentDetails.baseRegistrationFee * paymentDetails.childrenCount)|number_format(2) }}</th>
                    </tr>
                </table>
                
                <p class="text-muted small">
                    The registration fee covers account setup, administration, and program enrollment for each child.
                </p>
            </div>
            
            <form method="post" action="/checkout" id="checkoutForm">
                <input type="hidden" name="childCount" id="childCountHidden" value="{{ paymentDetails.childrenCount }}">
                <button type="submit" class="checkout-button">Proceed to Payment</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal Backdrop -->
<div class="modal-backdrop" id="modalBackdrop"></div>

<!-- Error Modal -->
<div class="modal" id="errorModal">
    <div class="modal-header modal-header-error">
        <h5>Error</h5>
        <button type="button" class="modal-close-button" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        {{ error ?? 'An error occurred during the payment process.' }}
    </div>
    <div class="modal-footer">
        <button type="button" class="modal-action-button" data-dismiss="modal">Close</button>
    </div>
</div>

<!-- Payment Canceled Modal -->
<div class="modal" id="canceledModal">
    <div class="modal-header modal-header-warning">
        <h5>Payment Canceled</h5>
        <button type="button" class="modal-close-button" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <p>Your payment was canceled. You can try again when you're ready.</p>
    </div>
    <div class="modal-footer">
        <button type="button" class="modal-action-button" data-dismiss="modal">Close</button>
    </div>
</div>

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Simplified variable declarations
    const elements = {
        childCount: document.getElementById('childCount'),
        childCountHidden: document.getElementById('childCountHidden'),
        totalAmount: document.getElementById('totalAmount')
    };
    
    // Registration fee per child
    const registrationFee = {{ paymentDetails.baseRegistrationFee }};
    
    // Modal handling
    const handleModals = () => {
        const modalBackdrop = document.getElementById('modalBackdrop');
        
        // Show modal function
        const showModal = (modalId) => {
            const modal = document.getElementById(modalId);
            if (modal) {
                modalBackdrop.classList.add('show');
                modal.classList.add('show');
            }
        };
        
        // Close button handlers
        document.querySelectorAll('[data-dismiss="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const modal = this.closest('.modal');
                modalBackdrop.classList.remove('show');
                modal.classList.remove('show');
            });
        });
        
        // Click outside to close
        modalBackdrop.addEventListener('click', function() {
            document.querySelectorAll('.modal.show').forEach(modal => {
                modalBackdrop.classList.remove('show');
                modal.classList.remove('show');
            });
        });
        
        // Show modals based on conditions
        {% if error is defined %}
            showModal('errorModal');
        {% endif %}
        
        {% if app.request.query.get('canceled') %}
            showModal('canceledModal');
        {% endif %}
    };
    
    // Initialize modals
    handleModals();
    
    // Update pricing based on child count
    function updatePricing() {
        let childCount = parseInt(elements.childCount.value) || 1;
        
        // Ensure at least 1 child
        if (childCount < 1) {
            childCount = 1;
            elements.childCount.value = 1;
        }
        
        // Update hidden field
        elements.childCountHidden.value = childCount;
        
        // Calculate total
        const total = registrationFee * childCount;
        elements.totalAmount.textContent = '$' + total.toFixed(2);
    }
    
    // Event listeners
    elements.childCount.addEventListener('change', updatePricing);
    elements.childCount.addEventListener('input', updatePricing);
    
    document.getElementById('decreaseChildren').addEventListener('click', function() {
        let currentVal = parseInt(elements.childCount.value) || 1;
        if (currentVal > 1) {
            elements.childCount.value = currentVal - 1;
            updatePricing();
        }
    });
    
    document.getElementById('increaseChildren').addEventListener('click', function() {
        let currentVal = parseInt(elements.childCount.value) || 1;
        if (currentVal < 10) {
            elements.childCount.value = currentVal + 1;
            updatePricing();
        }
    });
    
    // Initialize
    updatePricing();
});
</script>
{% endblock %}
{% endblock %} 