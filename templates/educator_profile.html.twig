{% extends "master.html.twig" %}

{% block title %}Educator Profile - DayCare System{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Your Profile</h1>

    {% if messages.success %}
        <div class="alert alert-success">{{ messages.success[0]|raw }}</div>
    {% endif %}

    <!-- Educator Photo -->
    {% if user.photo %}
        <div class="mb-4 text-center">
            <img src="/uploads/{{ user.photo }}" alt="Profile Photo" class="rounded-circle shadow" width="150" height="150">
        </div>
    {% endif %}

    <!-- Display Class Info -->
    <div class="mb-3">
        <strong>Assigned ID:</strong> {{ user.id }}
    </div>
    <div class="mb-3">
        <strong>Number of Children:</strong> {{ childCount }}
    </div>

    <!-- Editable Fields -->
    <form method="post" action="/educator/profile">
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ user.name }}" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" name="email" id="email" class="form-control" value="{{ user.email }}" required>
        </div>
        <!-- Future: Add upload field for profile photo update if needed -->
        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
</div>
{% endblock %}
