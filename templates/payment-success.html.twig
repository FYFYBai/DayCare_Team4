{% extends "master.html.twig" %}

{% block title %}Payment Successful - Daycare System{% endblock %}

{% block content %}
<div class="payment-container">
    <div class="payment-card">
        <div class="payment-header">
            <h1>Payment Successful</h1>
        </div>
        <div class="payment-body">
            <h2>Thank you for your payment!</h2>
            
            {% if payment %}
                <div class="payment-details">
                    <p><strong>Amount paid:</strong> ${{ payment.amount|number_format(2) }}</p>
                    <p><strong>Number of children:</strong> {{ payment.child_count }}</p>
                    <p><strong>Date:</strong> {{ payment.payment_date|date('Y-m-d H:i:s') }}</p>
                    <p><strong>Transaction ID:</strong> <small>{{ payment.stripe_session_id }}</small></p>
