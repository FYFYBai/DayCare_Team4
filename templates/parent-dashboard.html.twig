{% extends 'master.html.twig' %}

{% block title %}Parent Dashboard{% endblock %}

{% block content %}
    <h1>Parent Dashboard</h1>
    <p>Welcome, {{ user.name }}!</p>
    
    <h2>Your Children</h2>
    <ul>
        {% for child in children %}
            <li>
                {{ child.name }} - Date of Birth: {{ child.date_of_birth }}
                {% if child.profile_photo_path %}
                    <br>
                    <img src="/uploads/{{ child.profile_photo_path }}" alt="Child Photo" width="100">
                {% endif %}
            </li>
        {% else %}
            <li>No children registered yet. <a href="/child/list">Add children to your account</a>.</li>
        {% endfor %}
    </ul>
    
    <h2>Quick Actions</h2>
    <ul>
        <li><a href="/payment">Make Registration Payment</a></li>
        <li><a href="/child/list">Manage Children</a></li>
        <!-- Add more parent-specific actions here -->
    </ul>
    
    <h2>Upcoming Events</h2>
    <ul>
        {% for event in events %}
            <li>{{ event.name }} - {{ event.date }}</li>
        {% else %}
            <li>No upcoming events scheduled.</li>
        {% endfor %}
    </ul>
    

    <h2>Registration Payment Status</h2>
    {% set hasCompletedPayment = false %}
    {% set latestCompletedPayment = null %}
    {% for payment in payments %}
        {% if payment.payment_status == 'completed' and not hasCompletedPayment %}
            {% set hasCompletedPayment = true %}
            {% set latestCompletedPayment = payment %}
        {% endif %}
    {% endfor %}

    {% if hasCompletedPayment and latestCompletedPayment %}
        <div class="alert alert-success">
            Registration payment completed on {{ latestCompletedPayment.payment_date|date('Y-m-d') }}
            for {{ latestCompletedPayment.child_count }} child(ren).
            <br>
            <small class="text-muted">Transaction ID: {{ latestCompletedPayment.stripe_session_id }}</small>
        </div>
    {% else %}
        <div class="alert alert-warning">
            Registration payment pending. 
            <a href="/payment" class="alert-link">Complete your registration payment</a>
        </div>
    {% endif %}
    
    <!-- Payment History Section -->
    <h2>Payment History</h2>
    {% if payments|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Children</th>
                        <th>Status</th>
                        <th>Transaction ID</th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                    <tr>
                        <td>{{ payment.payment_date|date('M j, Y H:i') }}</td>
                        <td>${{ payment.amount|number_format(2) }}</td>
                        <td>{{ payment.child_count ?? 1 }}</td>
                        <td>
                            {% if payment.payment_status == 'completed' %}
                                <span class="badge bg-success">COMPLETED</span>
                            {% elseif payment.payment_status == 'pending' %}
                                <span class="badge bg-warning text-dark">PENDING</span>
                            {% else %}
                                <span class="badge bg-danger">{{ payment.payment_status|upper }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if payment.stripe_session_id %}
                                <small class="text-muted">{{ payment.stripe_session_id }}</small>
                            {% else %}
                                <small class="text-muted">N/A</small>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            No payment history found
        </div>
    {% endif %}

    <style>
    .table-responsive {
        overflow-x: auto;
        margin-top: 1rem;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
        background-color: #f8f9fa;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .badge {
        display: inline-block;
        padding: 0.35em 0.65em;
        font-size: 0.75em;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .bg-success {
        background-color: #198754 !important;
        color: white;
    }

    .bg-warning {
        background-color: #ffc107 !important;
    }

    .bg-danger {
        background-color: #dc3545 !important;
        color: white;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-dark {
        color: #212529 !important;
    }
    </style>

    <p><a href="/logout">Logout</a></p>
{% endblock %}
